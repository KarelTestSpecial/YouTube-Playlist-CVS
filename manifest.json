
{
  "manifest_version": 3,
  "name": "YouTube Playlist Collector",
  "version": "1.4",
  "description": "Collects video links from the current YouTube playlist tab and exports them to a downloadable CSV file.",
  "permissions": [
    "scripting",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "YouTube Playlist Collector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}